@using Microsoft.AspNetCore.Mvc.Localization
@using Localization.AspNetCore.TagHelpers
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["OrdersTitle"];
}

@section Scripts {
    <environment names="Development">
        <script src="~/js/pages/OrderIndex.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/minified/OrderIndex.min.js" asp-append-version="true"></script>
        <link href="~/plugins/datatables/css/jquery.datatables_themeroller.css" rel="stylesheet" />
    </environment>
}

