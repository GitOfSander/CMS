@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model EditPasswordViewModel

@{
    ViewData["Title"] = @Localizer["PageTitle"];
}

@section Stylesheets {
    <environment names="Development">
    </environment>
    <environment names="Staging,Production">
    </environment>

    <style>
        .text-danger ul {
            margin: 0 !important;
        }

            .text-danger ul:not(:empty) li {
                margin-bottom: 10px !important;
            }
    </style>
}

@section Scripts {
    <environment names="Development">
    </environment>
    <environment names="Staging,Production">
    </environment>
}

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="row list-header">
                <div class="col-md-12">
                    <h2>@Localizer["PageTitle"]</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">@Localizer["PageTitle"]</h4>
                </div>
                <div class="panel-body m-b-xs">
                    <div class="row">
                        <form asp-controller="Account" asp-action="EditPassword" method="post" class="form-horizontal col-md-6">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            @if (!string.IsNullOrEmpty(ViewBag.succeeded))
                            {
                                <div class="text-success m-b-md">@ViewBag.succeeded</div>
                            }

                            <div class="form-group">
                                <label asp-for="CurrentPassword" class="col-md-4 control-label">@Localizer["CurrentPassword"]</label>
                                <div class="col-md-8">
                                    <input asp-for="CurrentPassword" class="form-control" />
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword" class="col-md-4 control-label">@Localizer["NewPassword"]</label>
                                <div class="col-md-8">
                                    <input asp-for="NewPassword" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmNewPassword" class="col-md-4 control-label">@Localizer["ConfirmNewPassword"]</label>
                                <div class="col-md-8">
                                    <input asp-for="ConfirmNewPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-offset-4 col-md-8">
                                    <button type="submit" class="btn btn-success pull-right">@Localizer["SaveNewPassword"]</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>