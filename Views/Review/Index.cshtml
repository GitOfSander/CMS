@section Scripts {
    <environment names="Development">
        <script src="~/js/pages/ReviewIndex.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/minified/ReviewIndex.min.js" asp-append-version="true"></script>
    </environment>
