                    <div class="col-sm-6" id="closeHolder">
                        <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-default btn-block" id="close">@Localizer["Close"]</button>
                    </div>
                    <div class="col-sm-6" id="createHolder">
                        <a class="btn btn-success btn-block" id="saveBilling">@Localizer["Save"]</a>
                    </div>
                </div>
            </div>
