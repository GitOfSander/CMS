        var unauthorized = "@Localizer["Unauthorized"]",
            selectProduct = "@Localizer["SelectProduct"]",
            firstNameValidation = "@Localizer["FirstNameValidation"]",
            lastNameValidation = "@Localizer["LastNameValidation"]",
            zipCodeValidation = "@Localizer["ZipCodeValidation"]",
            cityValidation = "@Localizer["CityValidation"]",
            countryValidation = "@Localizer["CountryValidation"]",
            addressValidation = "@Localizer["AddressValidation"]", 
            nameValidation = "@Localizer["NameValidation"]", 
            priceValidation = "@Localizer["PriceValidation"]",
            taxRateValidation = "@Localizer["TaxRateValidation"]",
            quantityValidation = "@Localizer["QuantityValidation"]",
            phoneNumberValidation = "@Localizer["PhoneNumberValidation"]",
            digitsValidation = "@Localizer["DigitsValidation"]",
            digitsValidationEnd = "@Localizer["DigitsValidationEnd"]",
            conceptVal = "@Localizer["ConceptVal"]", 
            pendingVal = "@Localizer["PendingVal"]",
