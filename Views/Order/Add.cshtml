                            <input type="text" class="form-control" id="zipCode" name="zipCode" placeholder="@Localizer["ZipCode"]" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">@Localizer["City"]</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="city" name="city" placeholder="@Localizer["City"]" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">@Localizer["Country"]</label>
                        <div class="col-sm-8">
                            <select id="country" name="country" class="form-control">
                                <option value="" selected="selected">@Localizer["SelectCountry"]</option>
                                <option value="nl">@Localizer["Netherlands"]</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">@Localizer["Province"]</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="state" name="state" placeholder="@Localizer["Province"]" />
                        </div>
                    </div>
                </form>
