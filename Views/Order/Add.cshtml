                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">@Localizer["EmailAddress"]</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="email" name="email" placeholder="@Localizer["EmailAddress"]" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">@Localizer["PhoneNumber"]</label>
                        <div class="col-sm-8">
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="@Localizer["PhoneNumber"]" />
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <label class="col-sm-4 control-label">@Localizer["Address"]</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="addressLine1" name="addressLine1" placeholder="@Localizer["AddressPlaceholder"]" />
